rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper functions ---
    function isAuth() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuth()
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('isAdmin', false) == true;
    }

    function isOwner(userId) {
      return isAuth() && request.auth.uid == userId;
    }

    // --- USERS ---
    match /users/{userId} {
      allow read: if isAuth();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId) || isAdmin();
    }

    // --- LICENSES ---
    match /licenses/{licenseId} {
      allow read: if isAuth();
      allow create: if isAuth();
      allow update, delete: if isAdmin();
    }

    // --- CONVERSATIONS ---
    match /conversations/{conversationId} {
      allow read: if isAuth() && resource.data.userId == request.auth.uid;
      allow create: if isAuth();
      allow update: if isAuth() && resource.data.userId == request.auth.uid;
      allow delete: if isAuth() && resource.data.userId == request.auth.uid;
    }

    // --- MESSAGES ---
    match /messages/{messageId} {
      allow read: if isAuth();
      allow create: if isAuth();
      allow update: if isAuth() && resource.data.userId == request.auth.uid;
      allow delete: if isAuth() && resource.data.userId == request.auth.uid;
    }

    // --- USER IPs ---
    match /user_ips/{docId} {
      allow create: if isAuth();
      allow read, update, delete: if isAdmin();
    }

    // --- IP BANS ---
    match /ip_bans/{banId} {
      allow read, write, delete: if isAdmin();
    }

    // --- USER BANS ---
    match /bans/{banId} {
      allow read: if isAdmin()
        || (isAuth() && resource.data.userId == request.auth.uid);
      allow write, delete: if isAdmin();
    }

    // --- MAINTENANCE NOTICES ---
    match /maintenance_notices/{noticeId} {
      allow read: if true;
      allow write, delete: if isAdmin();
    }

    // --- SETTINGS ---
    match /settings/{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
